{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12">
        {{ form_start(form, {'action' : path('task_create')}) }}
            {% for error in form.vars.errors %}
                <div class="invalid-feedback d-block">
                    {{ error.message }}
                </div>
            {% endfor %}
            {{ form_label(form.title, 'Titre') }}
            {{ form_widget(form.title, {'attr': {'class':'form-control'}}) }}
            {{ form_label(form.content, 'Contenu') }}
            {{ form_widget(form.content, {'attr': {'class':'form-control', 'rows':'5'}}) }}
            <button type="submit" class="btn btn-success my-3">Ajouter</button>
        {{ form_end(form) }}

        <a href="{{ path('task_list') }}" class="btn btn-primary">Retour à la liste des tâches</a>
        </div>
    </div>
{% endblock %}
