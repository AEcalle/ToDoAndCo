{% extends 'base.html.twig' %}

{% block header_title %}<h1>Modifier <strong>{{ user.username }}</strong></h1>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row">
        {{ form_start(form, {'action' : path('user_edit', {'id' : user.id})}) }}
            {% for error in form.vars.errors %}
                <div class="invalid-feedback d-block">
                    {{ error.message }}
                </div>
            {% endfor %}
                {{ form_row(form.username, {'attr': {'class':'form-control'}}) }}   
                {{ form_row(form.password.first, {'attr': {'class':'form-control'}}) }}
                {{ form_row(form.password.second, {'attr': {'class':'form-control'}}) }}
                {{ form_row(form.email, {'attr': {'class':'form-control'}}) }}
                {{ form_row(form.roles, {'attr': {'class':'form-control'}}) }}
        <button type="submit" class="btn btn-success my-3">Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
